{
  "name": "microcosm",
  "version": "10.0.0-rc",
  "private": true,
  "description": "A variant of Facebook's Flux with centralized, isolated state",
  "main": "src/microcosm.js",
  "scripts": {
    "build": "make all",
    "lint": "eslint {src,test,examples}/**",
    "test": "ava",
    "test:cov:html": "nyc --cache --reporter=html ava",
    "test:cov:lcov": "nyc --cache --reporter=text-lcov ava",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "make release"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vigetlabs/microcosm.git"
  },
  "bugs": {
    "url": "https://github.com/vigetlabs/microcosm/issues",
    "email": "developers@viget.com"
  },
  "keywords": [
    "react",
    "flux"
  ],
  "license": "MIT",
  "ava": {
    "concurrency": 4,
    "source": [
      "src/**/*{.js,.jsx}",
      "examples/**/*{.js,.jsx}",
      "!examples/**/test/**/*"
    ],
    "files": [
      "examples/**/*.test{.js,.jsx}",
      "test/**/*.test{.js,.jsx}"
    ],
    "failFast": true,
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": "inherit"
  },
  "dependencies": {
    "form-serialize": "0.7.1",
    "is-promise": "2.1.0"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-loader": "6.2.5",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "6.14.0",
    "body-parser": "1.15.2",
    "console.table": "0.7.0",
    "coveralls": "2.11.12",
    "elizabot": "0.0.2",
    "enzyme": "2.4.1",
    "eslint": "3.5.0",
    "eslint-plugin-markdown": "1.0.0-beta.2",
    "eslint-plugin-react": "6.2.1",
    "express": "4.14.0",
    "happypack": "2.2.1",
    "immutable": "3.8.1",
    "jsdom": "9.5.0",
    "json-loader": "0.5.4",
    "microcosm-debugger": "vigetlabs/microcosm-debugger",
    "microtime": "2.1.1",
    "nyc": "8.1.0",
    "react": "~15.3.1",
    "react-addons-test-utils": "~15.3.1",
    "react-dom": "~15.3.1",
    "react-router": "2.8.1",
    "sprout-data": "0.2.3",
    "uid": "0.0.2",
    "webpack": "~1.13.2",
    "webpack-dev-middleware": "1.7.0",
    "webpack-dev-server": "~1.15.1"
  }
}
