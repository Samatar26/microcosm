{
  "name": "microcosm",
  "version": "10.0.0-beta2",
  "private": true,
  "description": "A variant of Facebook's Flux with centralized, isolated state",
  "main": "src/microcosm.js",
  "scripts": {
    "build": "make all",
    "lint": "eslint {src,test,examples}/**",
    "test": "ava",
    "test:cov": "nyc --cache --reporter=html ava",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "make release"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vigetlabs/microcosm.git"
  },
  "bugs": {
    "url": "https://github.com/vigetlabs/microcosm/issues",
    "email": "developers@viget.com"
  },
  "keywords": [
    "react",
    "flux"
  ],
  "license": "MIT",
  "ava": {
    "concurrency": 4,
    "source": [
      "src/**/*{.js,.jsx}",
      "examples/**/*{.js,.jsx}",
      "!examples/**/test/**/*"
    ],
    "files": [
      "examples/**/*.test{.js,.jsx}",
      "test/**/*.test{.js,.jsx}"
    ],
    "failFast": true,
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": "inherit"
  },
  "dependencies": {
    "form-serialize": "0.7.1",
    "hoist-non-react-statics": "~1.2.0",
    "is-promise": "2.1.0"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "babel-cli": "6.11.4",
    "babel-core": "6.11.4",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-es2015-classes": "6.9.0",
    "babel-plugin-transform-es2015-computed-properties": "6.8.0",
    "babel-plugin-transform-es2015-destructuring": "6.9.0",
    "babel-plugin-transform-es2015-for-of": "6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.11.5",
    "babel-plugin-transform-es2015-typeof-symbol": "6.8.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.11.0",
    "babel-register": "6.11.6",
    "body-parser": "1.15.2",
    "console.table": "0.7.0",
    "coveralls": "2.11.12",
    "elizabot": "0.0.2",
    "enzyme": "2.4.1",
    "eslint": "3.1.1",
    "eslint-plugin-markdown": "1.0.0-beta.2",
    "eslint-plugin-react": "5.2.2",
    "express": "4.14.0",
    "happypack": "2.1.1",
    "jsdom": "9.4.1",
    "json-loader": "0.5.4",
    "microcosm-debugger": "vigetlabs/microcosm-debugger",
    "microtime": "2.1.1",
    "nyc": "7.0.0",
    "react": "~15.2.1",
    "react-addons-test-utils": "15.2.1",
    "react-dom": "~15.2.1",
    "react-router": "2.5.2",
    "sprout-data": "0.2.3",
    "uid": "0.0.2",
    "webpack": "~1.13.1",
    "webpack-dev-middleware": "1.6.1",
    "webpack-dev-server": "~1.14.1"
  }
}
