{
  "name": "microcosm",
  "version": "11.6.0",
  "private": true,
  "description": "Flux with actions at center stage. Write optimistic updates, cancel requests, and track changes with ease.",
  "main": "microcosm.js",
  "homepage": "http://code.viget.com/microcosm",
  "scripts": {
    "build": "make all",
    "lint": "eslint {src,test,examples}/**.js",
    "test": "npm run lint && NODE_ENV=test jest --maxWorkers 2",
    "test:cov": "NODE_ENV=test jest --coverage --no-cache",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "release": "make release"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vigetlabs/microcosm.git"
  },
  "bugs": {
    "url": "https://github.com/vigetlabs/microcosm/issues",
    "email": "developers@viget.com"
  },
  "keywords": [
    "react",
    "flux"
  ],
  "license": "MIT",
  "jest": {
    "setupTestFrameworkScriptFile": "./test/helpers/setup.js",
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,json}",
      "!src/addons/jest-matchers.js"
    ]
  },
  "dependencies": {
    "form-serialize": "0.7.1"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.9",
    "babel-polyfill": "^6.22.0",
    "babel-preset-babili": "^0.0.11",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.16.0",
    "babel-register": "^6.16.3",
    "body-parser": "^1.16.1",
    "browser-sync": "^2.18.8",
    "console.table": "0.8.0",
    "coveralls": "^2.11.15",
    "elizabot": "^0.0.2",
    "enzyme": "^2.7.0",
    "eslint": "^3.15.0",
    "express": "^4.14.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.0",
    "microcosm-debugger": "^2.0.0",
    "microtime": "^2.1.2",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-hot-loader": "next",
    "react-router-dom": "next",
    "rollup": "^0.41.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-uglify": "^1.0.1",
    "uglifyjs": "^2.4.10",
    "uid": "^0.0.2",
    "webpack": "^2.2.0",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-dev-server": "^2.3.0"
  }
}
