{
  "globals": {
    "Promise": true,
    "jest": true,
    "expect": true
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "rules": {
    "semi": 0
  },
  "plugins": [
    "react",
    "markdown"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "react/prop-types" : 0,
    "no-console": 0,
    "no-unused-vars" : [2, { "args": "none" }]
  }
}
